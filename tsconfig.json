{
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*", "dist/*"]
    },

    "module": "ES6",
    "target": "ES2023",
    "lib": ["ES2023"],

    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": true
  }
}
